{
  "name": "qwik2",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build --ignore-ts-errors",
    "dev": "node ace serve --hmr --clear=false",
    "test": "node ace test",
    "lint": "eslint .",
    "preview": "npm run build && cd build && npm ci --omit=\"dev\" &&  ENV_PATH=../ NODE_ENV=\"production\" node ./bin/server",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#hooks/*": "./hooks/*.js",
    "#tests/*": "./tests/*.js",
    "#classes/*": "./app/classes/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@atopos/core": "workspace:^",
    "@atopos/presenter": "workspace:^",
    "@atopos/qwik-engine": "workspace:^",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@builder.io/qwik": "1.17.0",
    "@hot-hook/dump-viewer": "^0.4.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.18",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-morph": "^27.0.0",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.8",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^5.0.0-next.0",
    "@tailwindcss/vite": "^4.1.13",
    "lodash-es": "^4.17.21",
    "magic-string": "^0.30.19",
    "neverthrow": "^8.2.0",
    "oxc-parser": "^0.89.0",
    "reflect-metadata": "^0.2.2",
    "tailwindcss": "^4.1.13",
    "vite-plugin-inspect": "^11.3.3",
    "zod": "^4.1.5"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config"
}
